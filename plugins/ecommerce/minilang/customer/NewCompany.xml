<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://ofbiz.apache.org/Simple-Method" 
        xsi:schemaLocation="http://ofbiz.apache.org/Simple-Method http://ofbiz.apache.org/dtds/simple-methods.xsd">

    <simple-method method-name="createCompany" short-description="Create Company" login-required="false">
        <!-- Get system user for internal service calls -->
        <entity-one entity-name="UserLogin" value-field="systemUserLogin" auto-field-map="false">
            <field-map field-name="userLoginId" value="system"/>
        </entity-one>
        
        <!-- Get the product store -->
        <call-class-method class-name="org.apache.ofbiz.product.store.ProductStoreWorker" 
                         method-name="getProductStore" 
                         ret-field="productStore">
            <field field="request" type="javax.servlet.ServletRequest"/>
        </call-class-method>

        <property-to-field resource="security" property="username.lowercase" default="false" field="username_lowercase"/>
        <property-to-field resource="security" property="password.lowercase" default="false" field="password_lowercase"/>

        <!-- Set up timestamp -->
        <now-timestamp field="nowTimestamp"/>

        <!-- Set roleTypeId to CUSTOMER -->
        <set value="CUSTOMER" field="parameters.roleTypeId"/>

        <!-- ========== Create PartyGroup and UserLogin in a single transaction ========== -->
        <log level="info" message="Starting PartyGroup and UserLogin creation"/>
        
        <!-- Create separate contexts for PartyGroup and UserLogin -->
        <make-value entity-name="PartyGroup" value-field="partyGroupCtx"/>
        <make-value entity-name="UserLogin" value-field="userLoginCtx"/>

        <!-- Set PartyGroup fields with validation -->
        <call-map-processor in-map-name="parameters" out-map-name="partyGroupCtx">
            <simple-map-processor name="validatePartyGroup">
                <process field="groupName">
                    <copy to-field="groupName"/>
                    <not-empty>
                        <fail-property resource="EcommerceUiLabels" property="CommonCompanyNameMissing"/>
                    </not-empty>
                </process>
                <process field="CONTACT">
                    <copy to-field="comments"/>
                    <not-empty>
                        <fail-property resource="EcommerceUiLabels" property="ContactPersonMissing"/>
                    </not-empty>
                </process>
            </simple-map-processor>
        </call-map-processor>

        <!-- Set UserLogin fields with validation -->
        <if-compare field="productStore.usePrimaryEmailUsername" operator="equals" value="Y">
            <set field="parameters.USERNAME" from-field="parameters.CUSTOMER_EMAIL"/>
        </if-compare>

        <!-- if username and/or password should be lowercased, do that now -->
        <if-compare field="username_lowercase" operator="equals" value="true">
            <call-object-method obj-field="parameters.USERNAME" method-name="toLowerCase" ret-field="parameters.USERNAME"/>
        </if-compare>
        <if-compare field="password_lowercase" operator="equals" value="true">
            <call-object-method obj-field="parameters.PASSWORD" method-name="toLowerCase" ret-field="parameters.PASSWORD"/>
            <call-object-method obj-field="parameters.CONFIRM_PASSWORD" method-name="toLowerCase" ret-field="parameters.CONFIRM_PASSWORD"/>
        </if-compare>

        <!-- Create temporary map for validation -->
        <make-value entity-name="UserLogin" value-field="validationCtx"/>

        <!-- Use map processor for validation -->
        <call-map-processor in-map-name="parameters" out-map-name="validationCtx">
            <simple-map-processor name="validateUserLogin">
                <process field="USERNAME">
                    <copy to-field="userLoginId"/>
                    <not-empty>
                        <fail-property resource="PartyUiLabels" property="PartyUserLoginMissingError"/>
                    </not-empty>
                </process>
                <process field="PASSWORD">
                    <copy to-field="currentPassword"/>
                    <not-empty>
                        <fail-property resource="PartyUiLabels" property="PartyPasswordMissing"/>
                    </not-empty>
                </process>
                <process field="PASSWORD_HINT">
                    <copy to-field="passwordHint"/>
                </process>
            </simple-map-processor>
        </call-map-processor>
        
        <!-- Store password verification separately -->
        <set field="passwordVerify" from-field="parameters.CONFIRM_PASSWORD"/>
        
        <!-- Validate password match -->
        <if-compare-field field="parameters.PASSWORD" operator="not-equals" to-field="passwordVerify">
            <property-to-field field="tempErrorMessage" resource="PartyUiLabels" property="PartyPasswordMatchError"/>
            <string-to-list string="${tempErrorMessage}" message-field="CONFIRM_PASSWORD" list="error_list"/>
        </if-compare-field>

        <!-- Validate username -->
        <if-compare operator="not-equals" field="parameters.UNUSEEMAIL" value="on">
            <if>
                <condition>
                    <not>
                        <if-regexp field="parameters.USERNAME" expr="^[.a-zA-Z0-9_-]+$"></if-regexp>
                    </not>
                </condition>
                <then>
                    <add-error>
                        <fail-property resource="PartyUiLabels" property="NotValidUserName"/>
                    </add-error>
                </then>
            </if>
        </if-compare>

        <!-- Check if username already exists -->
        <if-not-empty field="userLoginCtx.userLoginId">
            <set from-field="userLoginCtx.userLoginId" field="userLoginExistsMap.userLoginId"/>
            <find-by-primary-key entity-name="UserLogin" map="userLoginExistsMap" value-field="existingUserLogin"/>
            <if-not-empty field="existingUserLogin">
                <property-to-field field="tempErrorMessage" resource="PartyUiLabels" property="PartyUserNameInUse"/>
                <string-to-list string="${tempErrorMessage}" message-field="USERNAME" list="error_list"/>
            </if-not-empty>
        </if-not-empty>

        <!-- Check password requirements -->
        <make-value entity-name="UserLogin" value-field="newUserLogin"/>
        <set from-field="userLoginCtx.userLoginId" field="newUserLogin.userLoginId"/>
        <set from-field="userLoginCtx.currentPassword" field="newUserLogin.currentPassword"/>
        <set from-field="userLoginCtx.passwordHint" field="newUserLogin.passwordHint"/>

        <!-- FIXME: always returns password verification as missing -->
        <!-- Validate password strength and requirements
        <script>groovy:
            String password = (String) userLoginCtx.get("currentPassword")
            String passwordHint = (String) userLoginCtx.get("passwordHint")
            org.apache.ofbiz.common.login.LoginServices.checkNewPassword(newUserLogin, null, password, passwordVerify, passwordHint, error_list, true, locale)
        </script>-->

        <!-- Create the email address -->
        <call-map-processor in-map-name="parameters" out-map-name="emailContext">
            <simple-map-processor name="newEmail">
                <process field="roleTypeId"><copy/></process>
                <process field="CUSTOMER_EMAIL">
                    <copy to-field="emailAddress"/>
                    <not-empty><fail-property resource="PartyUiLabels" property="PartyEmailAddressMissingError"/></not-empty>
                    <validate-method method="isEmail"><fail-property resource="PartyUiLabels" property="PartyEmailAddressNotFormattedCorrectly"/></validate-method>
                </process>
            </simple-map-processor>
        </call-map-processor>

        <!-- create the PartyDataSource entry to track where this info came from... -->
        <make-value entity-name="PartyDataSource" value-field="partyDataSource"/>
        <set value="ECOMMERCE_SITE" field="partyDataSource.dataSourceId"/>
        <set from-field="nowStamp" field="partyDataSource.fromDate"/>
        <set value="Y" field="partyDataSource.isCreate"/>
        <!-- get the visit from the session to get the visitId -->
        <session-to-field field="visit"/>
        <set from-field="visit.visitId" field="partyDataSource.visitId"/>

        <!-- Create the Postal Address -->
        <call-map-processor in-map-name="parameters" out-map-name="addressContext">
            <simple-map-processor name="newPartyGroup">
                <process field="groupName"><copy to-field="toName"/></process>
                <process field="roleTypeId"><copy/></process>
                <process field="CONTACT">
                    <copy to-field="attnName"/>
                    <not-empty><fail-property resource="EcommerceUiLabels" property="ContactPersonMissing"/></not-empty>
                </process>
                <process field="CUSTOMER_ADDRESS1">
                    <copy to-field="address1"/>
                    <not-empty><fail-property resource="PartyUiLabels" property="PartyAddressLine1MissingError"/></not-empty>
                </process>
                <process field="CUSTOMER_ADDRESS2"><copy to-field="address2"/></process>
                <process field="CUSTOMER_CITY">
                    <copy to-field="city"/>
                    <not-empty><fail-property resource="PartyUiLabels" property="PartyCityMissing"/></not-empty>
                </process>
                <process field="CUSTOMER_POSTAL_CODE">
                    <copy to-field="postalCode"/>
                    <not-empty><fail-property resource="PartyUiLabels" property="PartyZipCodeMissing"/></not-empty>
                </process>
                <process field="CUSTOMER_COUNTRY">
                    <copy to-field="countryGeoId"/>
                    <not-empty><fail-property resource="PartyUiLabels" property="PartyCountryMissing"/></not-empty>
                </process>
            </simple-map-processor>
        </call-map-processor>

        <!-- now that everything is validated & setup, check to see if there are errors, then call the services -->
        <check-errors/>

        <!-- Copy validated fields to userLoginCtx for service call -->
        <make-value entity-name="UserLogin" value-field="userLoginCtx"/>
        <set field="userLoginCtx.userLoginId" from-field="validationCtx.userLoginId"/>
        <set field="userLoginCtx.currentPassword" from-field="validationCtx.currentPassword"/>
        <if-not-empty field="validationCtx.passwordHint">
            <set field="userLoginCtx.passwordHint" from-field="validationCtx.passwordHint"/>
        </if-not-empty>

        <!-- Combine contexts for service call -->
        <set-service-fields map="partyGroupCtx" service-name="createPartyGroupAndUserLogin" to-map="serviceCtx"/>
        <set-service-fields map="userLoginCtx" service-name="createUserLogin" to-map="serviceCtx"/>
        <set field="serviceCtx.currentPasswordVerify" from-field="parameters.CONFIRM_PASSWORD"/>

        <!-- Create PartyGroup and UserLogin -->
        <log level="info" message="Calling createPartyGroupAndUserLogin service"/>
        <call-service service-name="createPartyGroupAndUserLogin" in-map-name="serviceCtx">
            <result-to-field result-name="partyId" field="partyId"/>
            <result-to-field result-name="userLogin" field="createdUserLogin"/>
        </call-service>
        
        <log level="info" message="Successfully created PartyGroup with ID: ${partyId} and UserLogin with ID: ${createdUserLogin.userLoginId}"/>

        <set-current-user-login value-field="createdUserLogin"/>

        <!-- now that we have the partyId, put it where it needs to go... -->
        <set from-field="partyId" field="partyDataSource.partyId"/>
        <set from-field="partyId" field="partyGroupCtx.partyId"/>
        <set from-field="partyId" field="userLoginCtx.partyId"/>
        <set from-field="partyId" field="partyRoleContext.partyId"/>
        <set from-field="partyId" field="addressContext.partyId"/>
        <set from-field="partyId" field="workPhoneContext.partyId"/>
        <set from-field="partyId" field="mobilePhoneContext.partyId"/>
        <set from-field="partyId" field="emailContext.partyId"/>

        <!-- Create the PartyRole -->
        <set from-field="parameters.roleTypeId" field="partyRoleContext.roleTypeId"/>
        <call-service service-name="createPartyRole" in-map-name="partyRoleContext" include-user-login="true"/>

        <!-- Create the email address -->
        <call-service service-name="createPartyEmailAddress" in-map-name="emailContext">
            <result-to-field result-name="contactMechId" field="emailPurposeContext.contactMechId"/>
        </call-service>
        <set from-field="partyId" field="emailPurposeContext.partyId"/>
        <set value="PRIMARY_EMAIL" field="emailPurposeContext.contactMechPurposeTypeId"/>
        <call-service service-name="createPartyContactMechPurpose" in-map-name="emailPurposeContext"/>

        <!-- Create the postal address -->
        <call-service service-name="createPartyPostalAddress" in-map-name="addressContext">
            <result-to-field result-name="contactMechId" field="addressPurposeContext.contactMechId"/>
        </call-service>
        <set from-field="partyId" field="addressPurposeContext.partyId"/>
        <!-- create the shipping location -->
        <set value="SHIPPING_LOCATION" field="addressPurposeContext.contactMechPurposeTypeId"/>
        <call-service service-name="createPartyContactMechPurpose" in-map-name="addressPurposeContext"/>
        <!-- also consider this address the general correspondence address -->
        <set value="GENERAL_LOCATION" field="addressPurposeContext.contactMechPurposeTypeId"/>
        <call-service service-name="createPartyContactMechPurpose" in-map-name="addressPurposeContext"/>

    </simple-method>

</simple-methods>
